<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/back_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:id="@+id/camera_card"
            android:layout_height="300dp" tools:ignore="MissingConstraints"
            app:cardCornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/apple_button"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
        <TextureView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/camera_texture_view"
                android:visibility="visible"
                tools:ignore="MissingConstraints,UnknownId"
                android:hapticFeedbackEnabled="true"

        />
    </android.support.v7.widget.CardView>


    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:background="@drawable/apple_button"
            android:id="@+id/apple_button"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
    />
</android.support.constraint.ConstraintLayout>
